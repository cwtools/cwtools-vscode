// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "npm",
            "script": "watch-client",
            "problemMatcher": "$tsc-watch",
            "isBackground": true,
            "presentation": {
                "reveal": "never"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "command": "${workspaceRoot}/build.sh",
            "windows": {
                "command": "${workspaceRoot}/build.cmd"
            },
            "label": "BuildLocal",
            "args": [
                "QuickBuildLocalDebug"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "command": "${workspaceRoot}/build.sh",
            "windows": {
                "command": "${workspaceRoot}/build.cmd"
            },
            "label": "Build",
            "args": [
                "QuickBuild"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "PaketUpdate",
            "command": "dotnet",
            "args": ["paket", "update", "-g", "git"]
        },
        {
            "label": "UpdateBuild",
            "dependsOn" :[ "PaketUpdate" ,"Build" ],
            "dependsOrder": "sequence"
        },
        {
            "label": "UpdateBuildLocal",
            "dependsOn": [
                "PaketUpdate",
                "BuildLocal"
            ],
            "dependsOrder": "sequence"
        }
    ]
}