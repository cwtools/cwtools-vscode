{
	"compilerOptions": {
		"noUnusedLocals": false,
		"noUnusedParameters": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"target": "es2020",
		"module": "commonjs",
		"moduleResolution": "node",
		"rootDir": "client",
		"outDir": "release/bin/client",
		"lib": [ "es2020", "dom" ],
		"sourceMap": true,
		"esModuleInterop": true,
		"strict": true
	},
	"include": [
		"client"
	],
	"exclude": [
		"node_modules",
		"server",
		"paket-files",
		".vscode-test"
	]
}